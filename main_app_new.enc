    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Mobile Menu
            const menuToggle = document.getElementById('mobile-menu-toggle');
            const mainNav = document.getElementById('main-nav');
            const overlay = document.createElement('div');
            overlay.className = 'nav-overlay';
            document.body.appendChild(overlay);

            function toggleMenu() {
                document.documentElement.classList.toggle('menu-open');
                mainNav.classList.toggle('is-open');
                overlay.classList.toggle('is-open');
            }

            if (menuToggle) {
                menuToggle.addEventListener('click', toggleMenu);
                overlay.addEventListener('click', toggleMenu);
                document.querySelectorAll('.navbar .nav-link').forEach(link => {
                    link.addEventListener('click', () => {
                        if (mainNav.classList.contains('is-open')) toggleMenu();
                    });
                });
            }

            // Changelog Accordion
            const changelogItems = document.querySelectorAll('.changelog-item');
            changelogItems.forEach(item => {
                const header = item.querySelector('.changelog-header');
                const content = item.querySelector('.changelog-content');

                if (header && content) {
                    header.addEventListener('click', () => {
                        const isActive = item.classList.contains('active');
                        // Close all others
                        changelogItems.forEach(otherItem => {
                            if (otherItem !== item) {
                                otherItem.classList.remove('active');
                                otherItem.querySelector('.changelog-content').style.maxHeight = null;
                            }
                        });
                        // Toggle current
                        if (!isActive) {
                            item.classList.add('active');
                            content.style.maxHeight = content.scrollHeight + "px";
                        } else {
                            item.classList.remove('active');
                            content.style.maxHeight = null;
                        }
                    });
                }
            });

            // Open the first changelog item by default
            const firstItem = document.querySelector('.changelog-item');
            if (firstItem) {
                const firstContent = firstItem.querySelector('.changelog-content');
                if (firstItem.classList.contains('active')) {
                    firstContent.style.maxHeight = firstContent.scrollHeight + "px";
                }
            }
        });
    </script>
