    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Tajawal:wght@400;500;700;800;900&display=swap"
        rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
        crossorigin="anonymous" referrerpolicy="no-referrer" />

    <style>
        /*
        ==============================================
        |       1. GLOBAL STYLES & HeytsApp COLORS   |
        ==============================================
        */
        :root {
            --primary: #3bae5e;
            --primary-dark: #2a8c4a;
            --dark: #0c2d32;
            --mid-navy: #0c2d32;
            --light-bg: #f4f9f5;
            --white-color: #FFFFFF;
            --text-dark: #0c2d32;
            --text-light: #556a6e;
            --border-color: #e9eef2;
            --radius: 12px;
            --shadow-light: 0 4px 15px rgba(0, 0, 0, 0.05);
            --shadow-medium: 0 8px 30px rgba(0, 0, 0, 0.07);
            --shadow-heavy: 0 15px 45px rgba(0, 0, 0, 0.1);
            --gradient-primary: linear-gradient(135deg, var(--primary), var(--primary-dark));
        }

        *,
        *::before,
        *::after {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        html {
            scroll-behavior: smooth;
        }

        body {
            font-family: 'Tajawal', sans-serif;
            background-color: var(--white-color);
            color: var(--text-dark);
            line-height: 1.8;
            text-align: right;
            overflow-x: hidden;
        }

        .container {
            width: 100%;
            max-width: 960px;
            /* Reduced max-width for content focus */
            margin-left: auto;
            margin-right: auto;
            padding-left: 20px;
            padding-right: 20px;
        }

        h1,
        h2,
        h3 {
            font-weight: 800;
            color: var(--dark);
            margin-bottom: 1.5rem;
            line-height: 1.3;
        }

        p {
            margin-bottom: 1.2rem;
            font-size: 1.1rem;
            color: var(--text-light);
        }

        a {
            text-decoration: none;
        }

        img {
            max-width: 100%;
            height: auto;
            display: block;
        }

        .section {
            padding: 100px 0;
        }

        .section-title {
            text-align: center;
            margin-bottom: 60px;
        }

        .section-tagline {
            display: inline-block;
            color: var(--primary);
            font-weight: 700;
            margin-bottom: 1rem;
        }

        /*
        ==============================================
        |               2. HEADER & FOOTER           |
        ==============================================
        */
        .header {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            z-index: 1000;
            width: 100%;
            padding: 20px 0;
            transition: all 0.4s ease;
            background-color: rgba(255, 255, 255, 0.8);
            backdrop-filter: blur(12px);
            -webkit-backdrop-filter: blur(12px);
            border-bottom: 1px solid var(--border-color);
        }

        main {
            padding-top: 85px;
        }

        .header .container {
            display: flex;
            justify-content: space-between;
            align-items: center;
            max-width: 1240px;
        }

        .logo img {
            height: 45px;
        }

        .navbar ul {
            list-style: none;
            display: flex;
            gap: 35px;
            align-items: center;
        }

        .navbar ul li a {
            font-weight: 700;
            color: var(--dark);
            position: relative;
            padding: 5px 0;
        }

        .navbar ul li a:hover,
        .navbar ul li a.active {
            color: var(--primary);
        }


        .footer {
            background-color: var(--dark);
            color: rgba(255, 255, 255, 0.7);
            padding: 60px 20px 30px;
            text-align: center;
        }

        .footer .logo img {
            height: 50px;
            margin: auto auto 20px;
        }

        .footer .footer-links {
            margin-bottom: 20px;
        }

        .footer .footer-links a {
            margin: 0 15px;
            color: rgba(255, 255, 255, 0.8);
            font-weight: 500;
        }

        .footer .footer-links a:hover {
            color: var(--primary);
        }

        .footer .copyright {
            font-size: .9rem;
            color: #aaa;
            border-top: 1px solid #0c2d32;
            padding-top: 30px;
            margin-top: 30px;
        }
        .btn {
            display: inline-block;
            padding: 16px 40px;
            font-size: 1rem;
            font-weight: 700;
            text-align: center;
            cursor: pointer;
            border: 2px solid transparent;
            border-radius: 50px;
            transition: all 0.4s cubic-bezier(0.25, 0.8, 0.25, 1);
        }

        .btn-primary {
            color: var(--white-color);
            background-image: var(--gradient-primary);
            background-size: 200% auto;
            box-shadow: 0 4px 15px rgba(59, 174, 94, 0.3);
        }

        .btn-primary:hover {
            transform: translateY(-5px);
            box-shadow: 0 7px 20px rgba(59, 174, 94, 0.4);
            background-position: right center;
        }
        .header .btn-primary {
            padding: 12px 28px;
            /* تقليل الحشو الداخلي للزر */
            font-size: 0.9rem;
            /* تصغير حجم الخط قليلاً */
        }

        /*
        ==============================================
        |           3. DOWNLOAD PAGE STYLES          |
        ==============================================
        */
        .download-box {
            background-color: var(--white-color);
            border: 1px solid var(--border-color);
            border-radius: var(--radius);
            padding: 50px;
            text-align: center;
            box-shadow: var(--shadow-medium);
            margin-bottom: 80px;
        }

        .download-box .version-info {
            font-size: 1.2rem;
            font-weight: 700;
            color: var(--primary-dark);
            margin-bottom: 10px;
        }

        .download-box h2 {
            margin-bottom: 25px;
            font-size: 2.5rem;
        }

        .download-box .btn {
            font-size: 1.2rem;
            padding: 20px 50px;
            margin: 20px 0;
        }

        .download-box .btn i {
            margin-left: 15px;
        }

        .download-box .compatibility-info {
            font-size: 0.9rem;
            color: var(--text-light);
        }

        /*
        ==============================================
        |             4. CHANGELOG STYLES            |
        ==============================================
        */
        .changelog-item {
            background-color: var(--white-color);
            border: 1px solid var(--border-color);
            border-radius: var(--radius);
            margin-bottom: 20px;
            overflow: hidden;
            box-shadow: var(--shadow-light);
        }

        .changelog-header {
            width: 100%;
            text-align: right;
            padding: 20px 25px;
            background: none;
            border: none;
            cursor: pointer;
            font-family: 'Tajawal', sans-serif;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .changelog-header h3 {
            margin: 0;
            font-size: 1.5rem;
            color: var(--dark);
        }

        .changelog-header .release-date {
            font-size: 1rem;
            font-weight: 500;
            color: var(--text-light);
            margin-right: 20px;
        }

        .changelog-header .icon {
            transition: transform 0.4s ease;
            font-size: 1.2rem;
            color: var(--primary);
        }

        .changelog-content {
            max-height: 0;
            overflow: hidden;
            transition: max-height 0.5s ease-in-out;
        }

        .changelog-content-inner {
            padding: 0 40px 30px 40px;
            border-top: 1px solid var(--border-color);
        }

        .changelog-content-inner h4 {
            margin-top: 30px;
            margin-bottom: 15px;
            font-size: 1.2rem;
            color: var(--primary-dark);
        }

        .changelog-content-inner ul {
            list-style: none;
            padding-right: 0;
        }

        .changelog-content-inner ul li {
            display: flex;
            align-items: center;
            gap: 15px;
            margin-bottom: 10px;
            font-size: 1.1rem;
        }

        .changelog-content-inner ul li i {
            font-size: 1.2rem;
        }

        .changelog-new i {
            color: var(--primary);
        }

        .changelog-fix i {
            color: #3b5998;
        }

        /* A distinct blue for fixes */

        .changelog-item.active .changelog-header .icon {
            transform: rotate(180deg);
        }
        .special-link {
            padding: 6px 18px !important;
            border: 2px solid var(--primary);
            border-radius: 50px;
            color: var(--primary) !important;
            transition: all 0.3s ease;
        }

        .special-link:hover {
            background-color: var(--primary);
            color: var(--white-color) !important;
        }

        /* To remove the animated underline from the special link */
        .special-link::after {
            display: none !important;
        }
        /*
        ==============================================
        |               5. RESPONSIVE & MOBILE MENU  |
        ==============================================
        */
        .mobile-menu-toggle {
            display: none;
            background: none;
            border: none;
            color: var(--dark);
            font-size: 1.8rem;
            cursor: pointer;
            z-index: 1001;
        }

        .nav-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            z-index: 998;
            opacity: 0;
            visibility: hidden;
            transition: opacity 0.4s ease;
        }

        .nav-overlay.is-open {
            opacity: 1;
            visibility: visible;
        }

